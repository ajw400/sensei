<% title "Sensei - Sign In" %>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<section class="height-100 imagebg text-center" data-overlay="8">
  <div class="background-image-holder">
    <%= image_tag "background/login.jpg" %>
  </div>
  <div class="container pos-vertical-center">
    <div class="row">
      <div class="col-sm-5">
        <form>
          <div class="row">
            <div class="col-sm-12">
              <%= f.input :email, label: false, placeholder: "Email", required: true %>
            </div>
            <div class="col-sm-12">
              <%= f.input :password, label: false, placeholder: "Password", required: true %>
            </div>
            <div class="col-sm-12">
              <%= f.button :submit, "Log in", class: "btn btn--primary type--uppercase" %>
            </div>
          </div>
        </form>
        <hr>

      <%= link_to user_facebook_omniauth_authorize_path do %>

        <div class="btn block btn--icon bg--facebook type--uppercase" href="#">
          <span class="btn__text">
            <i class="socicon-facebook"></i>
            Login with Facebook
          </span>
        </div>

      <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  <% end %>
</section>
